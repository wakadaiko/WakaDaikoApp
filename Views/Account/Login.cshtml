@model LoginVM
@{
    ViewBag.Title = "Account - Login";
}

<div
    class="flex flex-col items-center justify-center min-h-[calc(100vh-@(ViewBag.BannerTitle != null && ViewBag.BannerDate != null ? "96" : "64")px)] lg:min-h-[calc(87.5vh-@(ViewBag.BannerTitle != null && ViewBag.BannerDate != null ? "96" : "64")px)] bg-[rgb(6.25%,6.25%,6.25%)]">
    <div class="flex flex-col gap-4 rounded-md border-[1px] border-[rgb(25%,25%,25%)] p-5">
        <div>
            <div class="flex flex-col items-center">
                <svg class="me-3" stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 512 512"
                    width="96" height="96" xmlns="http://www.w3.org/2000/svg">
                    <path
                        d="M416 448h-84c-6.6 0-12-5.4-12-12v-40c0-6.6 5.4-12 12-12h84c17.7 0 32-14.3 32-32V160c0-17.7-14.3-32-32-32h-84c-6.6 0-12-5.4-12-12V76c0-6.6 5.4-12 12-12h84c53 0 96 43 96 96v192c0 53-43 96-96 96zm-47-201L201 79c-15-15-41-4.5-41 17v96H24c-13.3 0-24 10.7-24 24v96c0 13.3 10.7 24 24 24h136v96c0 21.5 26 32 41 17l168-168c9.3-9.4 9.3-24.6 0-34z">
                    </path>
                </svg>
                <h1 class="font-['Bebas_Neue'] font-black text-5xl tracking-wider">WELCOME BACK</h1>
                <div class="@((!ViewData.ModelState.IsValid) ? "text-rose-400 mt-3" : "hidden")">
                    @Html.ValidationSummary(true)
                </div>
            </div>
        </div>
        <form class="flex flex-col gap-2"
            action='/account/login?returnUrl=@(Model.ReturnUrl != "" ? Model.ReturnUrl : "/")' method="POST">
            @* Username *@
            <partial name="~/views/shared/htmlform.cshtml" model='new HtmlFormVM { Type="Username" }' />
            @* Password *@
            <partial name="~/views/shared/htmlform.cshtml" model='new HtmlFormVM { Type="Password" }' />
            @* Remember Me *@
            <label class="flex gap-2 select-none cursor-pointer p-4 -ms-3" for="remember">
                <input id="remember" class="accent-amber-300 hover:accent-amber-200" for="remember" type="checkbox" />
                Stay logged in
            </label>
            @* Button & Link *@
            <div class="flex flex-col items-center">
                <div class="w-full flex flex-col gap-2 lg:flex-row text-center lg:text-start">
                    <partial name="~/views/shared/htmllink.cshtml"
                        model='new HtmlLinkVM { Type="btn-account", URL="/account/login", Body="LOGIN" }' />
                    <partial name="~/views/shared/htmllink.cshtml"
                        model='new HtmlLinkVM { Type="link-account", URL="/account/register", Body="REGISTER" }' />
                </div>
            </div>
        </form>
    </div>
</div>
