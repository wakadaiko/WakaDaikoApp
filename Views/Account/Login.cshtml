@model LoginVM
@{
    ViewBag.Title = "Account - Login";
}

<div
    class="w-max flex flex-col gap-5 border-[1px] border-[rgb(90%,90%,90%)] shadow-lg container mx-auto my-10 lg:my-20 p-5">
    <div class="flex flex-col gap-3">
        <div class="flex flex-col gap-3 items-center">
            <svg class="me-3" stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 512 512"
                width="96px" height="96px" xmlns="http://www.w3.org/2000/svg">
                <path
                    d="M416 448h-84c-6.6 0-12-5.4-12-12v-40c0-6.6 5.4-12 12-12h84c17.7 0 32-14.3 32-32V160c0-17.7-14.3-32-32-32h-84c-6.6 0-12-5.4-12-12V76c0-6.6 5.4-12 12-12h84c53 0 96 43 96 96v192c0 53-43 96-96 96zm-47-201L201 79c-15-15-41-4.5-41 17v96H24c-13.3 0-24 10.7-24 24v96c0 13.3 10.7 24 24 24h136v96c0 21.5 26 32 41 17l168-168c9.3-9.4 9.3-24.6 0-34z">
                </path>
            </svg>
            <h1 class="font-black text-2xl lg:text-4xl tracking-wider">Welcome Back</h1>
            <div class='@((!ViewData.ModelState.IsValid) ? "text-red-500" : "hidden")'>
                @Html.ValidationSummary(true)
            </div>
        </div>
    </div>
    <form class="flex flex-col gap-5" action='/account/login?returnUrl=@(Model.ReturnUrl != "" ? Model.ReturnUrl : "/")'
        method="POST">
        @* Username *@
        <partial name="~/views/shared/htmlform.cshtml" model='new HtmlFormVM { Type="Username" }' />
        @* Password *@
        <partial name="~/views/shared/htmlform.cshtml" model='new HtmlFormVM { Type="Password" }' />
        @* Remember Me *@
        <div>
            <label class="flex gap-3 select-none cursor-pointer p-3" for="remember">
                <input id="remember" class="accent-red-600" for="remember" type="checkbox" />
                Stay logged in
            </label>
        </div>
        @* Button & Link *@
        <div class="flex flex-col items-center gap-3">
            <div class="w-full flex flex-col lg:flex-row text-center lg:text-start gap-3">
                <button class="bg-red-600 hover:bg-red-500 font-bold text-white p-3">Login</button>
                <partial name="~/views/shared/htmllink.cshtml"
                    model='new HtmlLinkVM { Type="account-2", URL="/account/register", Body="Register" }' />
            </div>
        </div>
    </form>
</div>
