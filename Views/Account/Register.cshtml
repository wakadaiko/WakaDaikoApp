@model RegisterVM
@{
    ViewBag.Title = "Account - Register";
}

<div
    class='flex flex-col items-center justify-center min-h-[calc(100vh-@(ViewBag.BannerTitle != null && ViewBag.BannerDate != null ? "96" : "64")px)] lg:min-h-[calc(87.5vh-@(ViewBag.BannerTitle != null && ViewBag.BannerDate != null ? "96" : "64")px)] bg-[rgb(6.25%,6.25%,6.25%)]'>
    <div class="flex flex-col gap-4 rounded-md border-[1px] border-[rgb(25%,25%,25%)] p-5">
        <div>
            <div class="flex flex-col items-center">
                <svg class="ms-3" stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 640 512"
                    width="96px" height="96px" xmlns="http://www.w3.org/2000/svg">
                    <path
                        d="M96 128a128 128 0 1 1 256 0A128 128 0 1 1 96 128zM0 482.3C0 383.8 79.8 304 178.3 304h91.4C368.2 304 448 383.8 448 482.3c0 16.4-13.3 29.7-29.7 29.7H29.7C13.3 512 0 498.7 0 482.3zM504 312V248H440c-13.3 0-24-10.7-24-24s10.7-24 24-24h64V136c0-13.3 10.7-24 24-24s24 10.7 24 24v64h64c13.3 0 24 10.7 24 24s-10.7 24-24 24H552v64c0 13.3-10.7 24-24 24s-24-10.7-24-24z">
                    </path>
                </svg>
                <h1 class="font-black text-2xl lg:text-4xl tracking-wider">WELCOME</h1>
                <div class='@((!ViewData.ModelState.IsValid) ? "text-rose-400 mt-3" : "hidden")'>
                    @Html.ValidationSummary(true)
                </div>
            </div>
        </div>
        <form class="flex flex-col gap-4" method="POST">
            @* Name *@
            <partial name="~/views/shared/htmlform.cshtml" model='new HtmlFormVM { Type="Name" }' />
            @* Username *@
            <partial name="~/views/shared/htmlform.cshtml" model='new HtmlFormVM { Type="Username" }' />
            @* Password *@
            <partial name="~/views/shared/htmlform.cshtml" model='new HtmlFormVM { Type="Password" }' />
            @* Confirm Password *@
            <partial name="~/views/shared/htmlform.cshtml" model='new HtmlFormVM { Type="ConfirmPassword" }' />
            @* Button & Link *@
            <div class="flex flex-col items-center gap-2">
                <div class="w-full flex flex-col lg:flex-row text-center lg:text-start gap-2">
                    <partial name="~/views/shared/htmllink.cshtml"
                        model='new HtmlLinkVM { Type="btn-account", URL="/account/register", Body="REGISTER" }' />
                    <partial name="~/views/shared/htmllink.cshtml"
                        model='new HtmlLinkVM { Type="link-account", URL="/account/login", Body="LOGIN" }' />
                </div>
            </div>
        </form>
    </div>
</div>
