@{
    string[] words = Model.Type.Split('-');

    for (int i = 0; i < words.Length; i++) words[i] = char.ToUpper(words[i][0]) + words[i].Substring(1);
}

<div id=@Model.Type
    class='flex flex-col lg:flex-row@(Model.Flip ? " lg:flex-row-reverse " : " ")container mx-auto lg:py-10'>
    <div
        class="w-full z-0 relative flex grow justify-center items-center overflow-hidden text-white my-auto p-5 lg:p-10">
        @* <div
        class="z-20 size-full min-h-[calc(100vh-64px)] flex flex-col
        bg-[radial-gradient(transparent,rgba(0,0,0,0.5))]">
        </div> *@
        @* alt=$"@(char.ToUpper(Model.Type[0]))@(Model.Type.Substring(1)).Split("-") screenshot" /> *@
        <img class="z-10 size-full object-cover aspect-video rounded-[32px] border-[8px] lg:border-[16px] border-neutral-300 shadow-lg saturate-[50%]"
            src="~/assets/@(Model.Type).jpg" alt='@(string.Join(" ", words)) screenshot' />
    </div>
    <div class="size-full gap-3 lg:gap-5 flex my-auto p-10">
        <div class=' min-w-1 bg-neutral-300@(Model.Flip ? " " : " ms-auto " )-my-5'>
        </div>
        <div class="flex flex-col gap-3 lg:gap-5 border-neutral-300 my-auto">
            <h1 class="font-black text-4xl lg:text-6xl">
                @Model.Heading
            </h1>
            @switch (Model.Type)
            {
                case "who-we-are":
                    <ul class="list-disc list-inside flex flex-col gap-3 text-xs lg:text-base text-[rgb(37.5%,37.5%,37.5%)]">
                        Waka Daiko is a fun, diverse, Taiko drumming group, that encourages team building and
                        instructor-student
                        mentorships.
                        <li class="ms-3">
                            All youth, ages 8-22, are welcome.
                        </li>
                    </ul>
                    <div class='flex flex-col lg:flex-row gap-1 lg:gap-4'>
                        <partial name="~/views/shared/htmllink.cshtml"
                            model='new HtmlLinkVM { Type="fancy-link", URL="/forms/signup", Body="Sign Up" }' />
                        <partial name="~/views/shared/htmllink.cshtml"
                            model='new HtmlLinkVM { Type="fancy-link", URL="/workshops", Body="Available Workshops" }' />
                    </div>
                    break;
                case "performances":
                    <ul class="list-disc list-inside flex flex-col gap-3 text-xs lg:text-base text-[rgb(37.5%,37.5%,37.5%)]">
                        <li class="list-none">
                            <ul class="tracking-wider font-black text-lg text-black">
                                <li>
                                    Waka Daiko has proudly performed live at:
                                </li>
                            </ul>
                        </li>
                        <li class="list-none">
                            <ul class="list-disc list-inside ms-3">
                                <li>
                                    Autzen Stadium
                                </li>
                                <li>
                                    Hult Center
                                </li>
                                <li>
                                    University of Oregon
                                </li>
                                <li>
                                    Lane Community College
                                </li>
                                <li>
                                    Asian Celebration
                                </li>
                                <li>
                                    Obon Festival
                                </li>
                                <li>
                                    Kite Festival
                                </li>
                                <li>
                                    Many; many, more places...
                                </li>
                            </ul>
                        </li>
                    </ul>
                    <div class='flex flex-col lg:flex-row gap-1 lg:gap-4'>
                        <partial name="~/views/shared/htmllink.cshtml"
                            model='new HtmlLinkVM { Type="fancy-link", URL="/events", Body="Upcoming Events" }' />
                        <partial name="~/views/shared/htmllink.cshtml"
                            model='new HtmlLinkVM { Type="fancy-link", URL="https://youtube.com/watch?v=xreRP5yyxAE", Body="Extra Video Resource" }' />
                    </div>
                    break;
                case "community":
                    <p class="text-xs lg:text-base text-[rgb(37.5%,37.5%,37.5%)]">
                        @* Parse HTML entities *@
                        @Html.Raw(Model.Body)
                    </p>
                    <div class='flex flex-col lg:flex-row gap-1 lg:gap-4'>
                        <partial name="~/views/shared/htmllink.cshtml"
                            model='new HtmlLinkVM { Type="fancy-link", URL="https://asiancelebration.org", Body="Asian Celebration" }' />
                        <partial name="~/views/shared/htmllink.cshtml"
                            model='new HtmlLinkVM { Type="fancy-link", URL="https://youtube.com/watch?v=GGRKNf-wDGM", Body="Extra Video Resource" }' />
                    </div>
                    break;
                case "culture":
                    <p class="text-xs lg:text-base text-[rgb(37.5%,37.5%,37.5%)]">
                        @* Parse HTML entities *@
                        @Html.Raw(Model.Body)
                    </p>
                    <div class='flex flex-col lg:flex-row gap-1 lg:gap-4'>
                        <partial name="~/views/shared/htmllink.cshtml"
                            model='new HtmlLinkVM { Type="fancy-link", URL="https://en.wikipedia.org/wiki/Taiko#History", Body="History of Taiko" }' />
                        <partial name="~/views/shared/htmllink.cshtml"
                            model='new HtmlLinkVM { Type="fancy-link", URL="https://youtube.com/watch?v=pJ68QTgGaN0", Body="Extra Video Resource" }' />
                    </div>
                    break;
                default:
                    <p class="text-xs lg:text-base text-[rgb(37.5%,37.5%,37.5%)]">
                        @* Parse HTML entities *@
                        @Html.Raw(Model.Body)
                    </p>
                    break;
            }
        </div>
    </div>
</div>
