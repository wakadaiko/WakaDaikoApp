@{
    string[] words = Model.Type.Split('-');

    for (int i = 0; i < words.Length; i++) words[i] = char.ToUpper(words[i][0]) + words[i].Substring(1);
}

<div class="relative bg-[rgb(6.25%,6.25%,6.25%)]">
    @* <div class="z-20 absolute top-0 left-0 size-full bg-gradient-to-t from-[rgba(12.5%,25%,50%,0.25)] from-0%
    via-transparent
    via-50% to-[rgba(12.5%,25%,50%,0.25)] to-100%">
    </div> *@
    <div id=@Model.Type class='flex flex-col lg:@(Model.Flip ? "flex-row-reverse" : "flex-row")'>
        @* <div class="z-0 relative w-full flex grow justify-center items-center overflow-hidden text-white"> *@
        @* bg-[url('/img/hero-pattern.svg')] *@
        @* class="w-full bg-center bg-cover bg-[url('/assets/@(Model.Type).jpg')] bg-amber-300/25 bg-blend-multiply
        saturate-[75%] contrast-[125%] text-white"> *@
        <div class="relative w-full">
            @* <div class="z-20 absolute top-0 left-0 size-full bg-gradient-to-t from-[rgba(12.5%,25%,50%,0.25)] from-0%
            via-transparent
            via-50% to-[rgba(12.5%,25%,50%,0.25)] to-100%">
            </div> *@
            @* class="z-10 absolute top-0 left-0 size-full bg-[radial-gradient(transparent,rgba(12.5,12.5,12.5,0.5))]">
            *@
            <div
                class="z-10 absolute top-0 left-0 size-full bg-gradient-to-t from-[rgb(30,30,30)] from-0% via-transparent via-50% to-[rgb(30,30,30)] to-100%">
            </div>
            <div
                class="z-10 absolute top-0 left-0 size-full bg-[linear-gradient(rgba(5%,5%,15%,0.25),rgba(5%,5%,15%,0.25))]">
            </div>
            @* <div
            class="z-20 size-full min-h-[calc(100vh-64px)] flex flex-col
            bg-[radial-gradient(transparent,rgba(0,0,0,0.5))]">
            </div> *@
            @* alt=$"@(char.ToUpper(Model.Type[0]))@(Model.Type.Substring(1)).Split("-") screenshot" /> *@
            <img class="w-full h-[540px] min-h-full object-cover saturate-[75%] brightness-[125%]
        contrast-[75%] shadow-lg" src="~/assets/@(Model.Type).jpg" alt='@(string.Join(" ", words)) screenshot' />
            @* <div class="z-20 absolute w-full h-full bg-[rgb(0,0,0,0.5)]"></div> *@
            @* <div class="z-20 absolute w-full h-full bg-[linear-gradient(to_bottom,black,transparent)]"></div> *@
            @* <div class="z-20 absolute w-full h-full bg-[radial-gradient(transparent,rgba(0,0,255,0.5))]"></div> *@
            @* <div class="z-20 absolute w-full h-full bg-[radial-gradient(transparent,rgba(14,165,233,0.5))]"></div> *@
            @* <div class="z-20 absolute w-full h-full bg-[rgba(14,165,233,0.25)] contrast-[200%]"></div> *@
            @* <div class="z-20 absolute w-full h-full bg-[rgba(249,115,22,0.1)] contrast-[200%]"></div> *@
            @* <div class="bg-orange-500"></div> *@
        </div>
        @* <div class='size-full gap-2 flex my-auto p-5 lg:p-20 lg:@(Model.Flip ? "pe-0" : "ps-0")'> *@
        <div class="w-full aspect-video gap-2 flex my-auto">
            @* <div class='min-w-1 bg-neutral-300@(Model.Flip ? " " : " ms-auto " )-my-5'></div> *@
            <div class="w-full flex flex-col gap-2 my-auto p-5 lg:p-20">
                <div class="w-max flex flex-col gap-1">
                    @* <hr class="border-4 border-amber-300 mb-2" /> *@
                    <h1 class="font-['Bebas_Neue'] font-black tracking-wider text-6xl lg:text-9xl"
                        style="line-height: 0.8;">
                        @Model.Heading
                    </h1>
                    <hr class="border-4 border-white mb-4" />
                </div>
                <div class="w-full flex flex-col gap-4">
                    <h3 class="w-max font-['Bebas_Neue'] font-bold tracking-wider text-2xl lg:text-5xl"
                        style="line-height: 0.8;">
                        @* Html.Raw() requires extra @ symbol *@
                        @switch (Model.Type)
                        {
                            case "who-we-are":
                                @Html.Raw("Ages 8-22")
                                break;
                            case "performances":
                                @Html.Raw("Proudly Performed at:")
                                break;
                            case "community":
                                @Html.Raw("Giving Back")
                                break;
                            case "culture":
                                @Html.Raw("Origin of Taiko")
                                break;
                        }
                    </h3>
                    @switch (Model.Type)
                    {
                        case "who-we-are":
                            <ul class="list-disc list-inside flex flex-col gap-2 lg:text-xl text-[rgb(75%,75%,75%)]">
                                Waka Daiko is a fun, diverse, Taiko drumming group, that encourages team building and
                                instructor-student
                                mentorships.
                                @* <li class="ms-3">
                        All youth, ages 8-22, are welcome.
                        </li> *@
                            </ul>
                            <div class='flex flex-col lg:flex-row gap-1 lg:gap-4'>
                                <partial name="~/views/shared/htmllink.cshtml"
                                    model='new HtmlLinkVM { Type="btn-primary", URL="/forms/signup", Body="SIGN UP" }' />
                                <partial name="~/views/shared/htmllink.cshtml"
                                    model='new HtmlLinkVM { Type="btn-primary", URL="/workshops", Body="AVAILABLE WORKSHOPS" }' />
                            </div>
                            break;
                        case "performances":
                            <ul class="list-disc list-inside flex flex-col gap-2 lg:text-xl text-[rgb(75%,75%,75%)]">
                                @* <li class="list-none">
                        <ul class="font-black text-lg text-white">
                        <li>
                        Waka Daiko has proudly performed live at:
                        </li>
                        </ul>
                        </li> *@
                                <li class="list-none">
                                    <ul class="list-disc list-inside ms-3">
                                        <li>
                                            Autzen Stadium
                                        </li>
                                        <li>
                                            Hult Center
                                        </li>
                                        <li>
                                            University of Oregon
                                        </li>
                                        <li>
                                            Lane Community College
                                        </li>
                                        <li>
                                            Asian Celebration
                                        </li>
                                        <li>
                                            Obon Festival
                                        </li>
                                        <li>
                                            Salem World Beat
                                        </li>
                                        <li>
                                            Kite Festival
                                        </li>
                                        <li>
                                            Many; many, more places...
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                            <div class='flex flex-col lg:flex-row gap-1 lg:gap-4'>
                                <partial name="~/views/shared/htmllink.cshtml"
                                    model='new HtmlLinkVM { Type="btn-primary", URL="/events", Body="UPCOMING EVENTS" }' />
                                <partial name="~/views/shared/htmllink.cshtml"
                                    model='new HtmlLinkVM { Type="btn-primary", URL="https://youtube.com/watch?v=xreRP5yyxAE", Body="VIDEO RESOURCE" }' />
                            </div>
                            break;
                        case "community":
                            <p class="lg:text-xl text-[rgb(75%,75%,75%)]">
                                @* Parse HTML entities *@
                                @Html.Raw(Model.Body)
                            </p>
                            <div class='flex flex-col lg:flex-row gap-1 lg:gap-4'>
                                <partial name="~/views/shared/htmllink.cshtml"
                                    model='new HtmlLinkVM { Type="btn-primary", URL="https://asiancelebration.org", Body="ASIAN CELEBRATION" }' />
                                <partial name="~/views/shared/htmllink.cshtml"
                                    model='new HtmlLinkVM { Type="btn-primary", URL="https://youtube.com/watch?v=GGRKNf-wDGM", Body="VIDEO RESOURCE" }' />
                            </div>
                            break;
                        case "culture":
                            <p class="lg:text-xl text-[rgb(75%,75%,75%)]">
                                @* Parse HTML entities *@
                                @Html.Raw(Model.Body)
                            </p>
                            <div class='flex flex-col lg:flex-row gap-1 lg:gap-4'>
                                <partial name="~/views/shared/htmllink.cshtml"
                                    model='new HtmlLinkVM { Type="btn-primary", URL="https://en.wikipedia.org/wiki/Taiko#History", Body="HISTORY OF TAIKO" }' />
                                <partial name="~/views/shared/htmllink.cshtml"
                                    model='new HtmlLinkVM { Type="btn-primary", URL="https://youtube.com/watch?v=pJ68QTgGaN0", Body="VIDEO RESOURCE" }' />
                            </div>
                            break;
                        default:
                            <p class="text-xs lg:text-base text-[rgb(75%,75%,75%)]">
                                @* Parse HTML entities *@
                                @Html.Raw(Model.Body)
                            </p>
                            break;
                    }
                </div>
            </div>
        </div>
    </div>
</div>
