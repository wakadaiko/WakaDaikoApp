<li>
    <div class="h-full flex flex-col border-[1px] border-[rgb(90%,90%,90%)] shadow-md">
        <div class="flex flex-col border-b-[1px] border-[rgb(90%,90%,90%)]">
            <img class="h-[192px] object-cover" src="~/assets/@Model.Image" />
            <h1 class="font-black text-2xl text-center border-[1px] border-[rgb(90%,90%,90%)] p-3">
                @Model.Title
            </h1>
            <div class="text-[rgb(50%,50%,50%)]">
                <p class="border-x-[1px] border-[rgb(90%,90%,90%)] p-3">
                    @Model.Text
                </p>
                <div class="flex items-center border-[1px] border-[rgb(90%,90%,90%)] p-3">
                    <partial name="~/views/shared/htmllink.cshtml"
                        model='new HtmlLinkVM { Type="btn-solid", URL=$"/events/{Model.EventId.ToString()}", Body="View More" }' />
                    <div class="flex flex-col text-end ms-auto">
                        <small>
                            Last modified at: @Model.Date
                        </small>
                        <small>
                            Authored by: @Model.Author
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</li>
