<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Waka Daiko - @ViewBag.Title</title>
    <link rel="icon" href="~/assets/favicon.jpg">
    <link href="~/css/site.css" rel="stylesheet">
    <script src="~/lib/tailwindcss/tailwindcss_341.js"></script>
</head>

<body class="bg-white text-black">
    @* Section - Header *@
    <header class="z-40 top-0 start-0 flex flex-col bg-inherit text-[rgb(37.5%,37.5%,37.5%)] shadow-lg">
        @* Section - Banner *@
        @if (ViewBag.BannerTitle != null && ViewBag.BannerDate != null)
        {
            <a class='group h-8 flex justify-center items-center bg-violet-500 hover:bg-violet-400 font-medium text-center text-xs text-white'
                href='/events'>
                <div class='rounded bg-violet-400 group-hover:bg-violet-300 px-2 py-[1px]'>
                    NEW EVENT
                </div>
                <div class="tracking-widest ms-3 me-2">
                    @ViewBag.BannerTitle <span class="font-black">on</span>
                    @ViewBag.BannerDate
                </div>
                <span class="text-lg transition-transform group-hover:translate-x-1">-&gt;</span>
            </a>
        }
        @* Section - Navbar *@
        <nav id="eMobileBorder" class="lg:border-b-[0px] border-[rgb(90%,90%,90%)]">
            <div class="lg:h-16 flex flex-col lg:flex-row lg:container lg:mx-auto">
                @* Section - Navbar - Left *@
                <div class="flex flex-col lg:flex-row lg:me-auto">
                    @* Section - Brand + Mobile *@
                    <div class="h-16 flex items-center border-b-[0px] border-[rgb(90%,90%,90%)] lg:border-0">
                        <div class="h-16 flex items-center ${cssBorder} lg:border-0">
                            <partial name="~/views/shared/htmllink.cshtml"
                                model='new HtmlLinkVM { Type="nav-brand", URL="/", Body="WAKA DAIKO" }' />
                        </div>
                        <button id="eMobileButton" class="lg:hidden h-full flex items-center ms-auto p-6" type="button"
                            onclick="toggleMobile();">
                            <svg stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 448 512"
                                width="16px" height="16px" xmlns="http://www.w3.org/2000/svg">
                                <path d="M0 96C0 78.3 14.3 64 32 64H416c17.7 0 32 14.3 32 32s-14.3 32-32 32H32C14.3 128 0
                            113.7 0
                            96zM0 256c0-17.7 14.3-32 32-32H416c17.7 0 32 14.3 32 32s-14.3 32-32 32H32c-17.7
                            0-32-14.3-32-32zM448 416c0 17.7-14.3 32-32 32H32c-17.7 0-32-14.3-32-32s14.3-32
                            32-32H416c17.7 0 32 14.3 32 32z">
                                </path>
                            </svg>
                            <svg class="hidden" stroke="currentColor" fill="currentColor" stroke-width="0"
                                viewBox="0 0 384 512" width="16px" height="16px" xmlns="http://www.w3.org/2000/svg">
                                <path d="M376.6 84.5c11.3-13.6 9.5-33.8-4.1-45.1s-33.8-9.5-45.1 4.1L192 206 56.6 43.5C45.3 29.9
                            25.1 28.1 11.5 39.4S-3.9 70.9 7.4 84.5L150.3 256 7.4 427.5c-11.3 13.6-9.5 33.8 4.1 45.1s33.8
                            9.5 45.1-4.1L192 306 327.4 468.5c11.3 13.6 31.5 15.4 45.1 4.1s15.4-31.5 4.1-45.1L233.7 256
                            376.6 84.5z">
                                </path>
                            </svg>
                        </button>
                    </div>
                    <div class="eMobiles hidden lg:flex flex-col lg:flex-row">
                        @* Section - Dropdown - Performances *@
                        <div
                            class="group relative flex flex-col lg:flex-row items-start lg:items-center text-sm hover:text-black lg:focus-within:hover:bg-[rgb(90%,90%,90%)] lg:hover:hover:bg-[rgb(90%,90%,90%)] tracking-wider">
                            <button class="group hidden w-full lg:flex font-medium p-6 lg:px-4">
                                Performances
                                <svg class="duration-200 ease-in-out hidden lg:block group-hover:rotate-[-180deg] ms-2 my-auto"
                                    stroke="currentColor" stroke-width="0" viewBox="0 0 16 16" width="12px"
                                    height="12px" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd"
                                        d="M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z">
                                    </path>
                                </svg>
                            </button>
                            <ul
                                class="z-30 eDropdowns duration-200 ease-in-out lg:opacity-0 lg:group-hover:opacity-100 lg:invisible lg:group-focus-within:visible lg:group-focus-within:invisible lg:group-hover:visible lg:absolute lg:top-full w-full lg:w-[150%] lg:start-[-25%] lg:bg-white text-[rgb(37.5%,37.5%,37.5%)] lg:shadow-lg">
                                <li>
                                    <partial name="~/views/shared/htmllink.cshtml"
                                        model='new HtmlLinkVM { Type="dropdown-item", URL="/events", Body="Events" }' />
                                </li>
                                <li>
                                    <partial name="~/views/shared/htmllink.cshtml"
                                        model='new HtmlLinkVM { Type="dropdown-item", URL="/forms/requests", Body="Requests" }' />
                                </li>
                            </ul>
                        </div>
                        @* Section - Dropdown - Resources *@
                        <div
                            class="group relative flex flex-col lg:flex-row items-start lg:items-center text-sm hover:text-black lg:focus-within:hover:bg-[rgb(90%,90%,90%)] lg:hover:hover:bg-[rgb(90%,90%,90%)] tracking-wider">
                            <button class="hidden w-full lg:flex font-medium p-6 lg:px-4">
                                Resources
                                <svg class="duration-200 ease-in-out hidden lg:block group-hover:rotate-[-180deg] ms-2 my-auto"
                                    stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 16 16"
                                    width="12px" height="12px" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd"
                                        d="M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z">
                                    </path>
                                </svg>
                            </button>
                            <ul
                                class="z-30 eDropdowns duration-200 ease-in-out lg:opacity-0 lg:group-hover:opacity-100 lg:invisible lg:group-focus-within:visible lg:group-focus-within:invisible lg:group-hover:visible lg:absolute lg:top-full w-full lg:w-[150%] lg:start-[-25%] lg:bg-white text-[rgb(37.5%,37.5%,37.5%)] lg:shadow-lg">
                                <li>
                                    <partial name="~/views/shared/htmllink.cshtml"
                                        model='new HtmlLinkVM { Type="dropdown-item", URL="/resources/tutorials", Body="Tutorials" }' />
                                </li>
                                <li>
                                    <partial name="~/views/shared/htmllink.cshtml"
                                        model='new HtmlLinkVM { Type="dropdown-item", URL="/resources/soundtracks", Body="Soundtracks" }' />
                                </li>
                                <li>
                                    <partial name="~/views/shared/htmllink.cshtml"
                                        model='new HtmlLinkVM { Type="dropdown-item", URL="/metronome", Body="Metronome" }' />
                                </li>
                            </ul>
                        </div>
                        @* Section - Dropdown - Contact *@
                        <div
                            class="group relative flex flex-col lg:flex-row items-start lg:items-center text-sm hover:text-black lg:focus-within:hover:bg-[rgb(90%,90%,90%)] lg:hover:hover:bg-[rgb(90%,90%,90%)] tracking-wider">
                            <button class="hidden w-full lg:flex font-medium p-6 lg:px-4">
                                Contact
                                <svg class="duration-200 ease-in-out hidden lg:block group-hover:rotate-[-180deg] ms-2 my-auto"
                                    stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 16 16"
                                    width="12px" height="12px" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd"
                                        d="M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z">
                                    </path>
                                </svg>
                            </button>
                            <ul
                                class="z-30 eDropdowns duration-200 ease-in-out lg:opacity-0 lg:group-hover:opacity-100 lg:invisible lg:group-focus-within:visible lg:group-focus-within:invisible lg:group-hover:visible lg:absolute lg:top-full w-full lg:w-[150%] lg:start-[-25%] lg:bg-white text-[rgb(37.5%,37.5%,37.5%)] lg:shadow-lg">
                                <li>
                                    <partial name="~/views/shared/htmllink.cshtml"
                                        model='new HtmlLinkVM { Type="dropdown-item", URL="mailto:abc@gmail.com", Body="Email" }' />
                                </li>
                                <li>
                                    <partial name="~/views/shared/htmllink.cshtml"
                                        model='new HtmlLinkVM { Type="dropdown-item", URL="https://facebook.com/youthtaiko", Body="Facebook" }' />
                                </li>
                                <li>
                                    <partial name="~/views/shared/htmllink.cshtml"
                                        model='new HtmlLinkVM { Type="dropdown-item", URL="/forms/signup", Body="Sign Up" }' />
                                </li>
                                <li>
                                    <partial name="~/views/shared/htmllink.cshtml"
                                        model='new HtmlLinkVM { Type="dropdown-item", URL="/forms/questions", Body="General Inquiries" }' />
                                </li>
                            </ul>
                        </div>
                        @if (User.Identity != null && User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <div
                                class="relative flex flex-col lg:flex-row items-start lg:items-center text-sm hover:text-black lg:focus-within:hover:bg-[rgb(90%,90%,90%)] lg:hover:hover:bg-[rgb(90%,90%,90%)]">
                                <partial name="~/views/shared/htmllink.cshtml"
                                    model='new HtmlLinkVM { Type="navlink", URL="/admin", Body="Admin" }' />
                            </div>
                        }
                    </div>
                </div>
                <hr />
                @* Section - Navbar - Right *@
                <div class="flex flex-col lg:flex-row">
                    <div class="eMobiles hidden lg:flex flex-col lg:flex-row justify-center">
                        @* Section - Dropdown - Account *@
                        <div
                            class="group relative flex flex-col lg:flex-row items-start lg:items-center text-sm hover:text-black lg:focus-within:hover:bg-[rgb(90%,90%,90%)] lg:hover:hover:bg-[rgb(90%,90%,90%)] tracking-wider">
                            <button class='group hidden w-full h-full lg:flex lg:items-center lg:justify-center@(User.Identity != null && User.Identity.IsAuthenticated ? " bg-black group-hover:bg-[rgb(12.5%,12.5%,12.5%)] text-white "
                                    : "")p-8 lg:px-8'>
                                <svg stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 16 16"
                                    width="24px" height="24px" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0"></path>
                                    <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468
                                11.37C3.242 11.226 4.805 10 8
                                10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1">
                                    </path>
                                </svg>
                                <svg class="duration-200 ease-in-out hidden lg:block group-hover:rotate-[-180deg] ms-2"
                                    stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 16 16"
                                    width="12px" height="12px" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd"
                                        d="M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z">
                                    </path>
                                </svg>
                            </button>
                            <ul
                                class="z-30 eDropdowns duration-200 ease-in-out lg:opacity-0 lg:group-hover:opacity-100 lg:invisible lg:group-focus-within:visible lg:group-focus-within:invisible lg:group-hover:visible lg:absolute lg:top-full w-full lg:w-[150%] lg:start-[-25%] lg:bg-white text-[rgb(37.5%,37.5%,37.5%)] lg:shadow-lg">
                                @if (User.Identity != null && User.Identity.IsAuthenticated)
                                {
                                    <li>
                                        <div
                                            class="flex justify-center items-center bg-amber-300 font-medium text-black mx-5 my-3 lg:m-0 p-4">
                                            Hello&nbsp;<span class="font-black">@User.Identity.Name</span></div>
                                    </li>
                                    <li>
                                        <form class="flex items-center text-blue-400 mx-5 lg:mx-0" action="/account/logout"
                                            method="POST">
                                            <button class="w-full bg-red-600 hover:bg-red-500 font-bold text-white p-4"
                                                type="submit">Logout</button>
                                        </form>
                                    </li>
                                }
                                else
                                {
                                    <li>
                                        <partial name="~/views/shared/htmllink.cshtml"
                                            model='new HtmlLinkVM { Type="dropdown-item", URL="/account/login", Body="Login" }' />
                                    </li>
                                    <li>
                                        <partial name="~/views/shared/htmllink.cshtml"
                                            model='new HtmlLinkVM { Type="dropdown-item", URL="/account/register", Body="Register" }' />
                                    </li>
                                }
                            </ul>
                        </div>
                        @* Section - Button - Workshops *@
                        <partial name="~/views/shared/htmllink.cshtml"
                            model='new HtmlLinkVM { Type="nav-workshops", URL="/workshops", Body="Taiko Workshops" }' />
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class='eMobiles z-30 hidden fixed start-0 left-0 w-screen h-screen bg-[rgba(0,0,0,.75)]'
        onclick="toggleMobile();"></div>
    @* Section - Body *@
    <main role="main">@RenderBody()</main>
    @* Section - Footer *@
    <footer class="text-[rgb(67.5%,67.5%,67.5%)] border-t-[0px] border-[rgb(90%,90%,90%)] shadow-hack p-5 pb-96">
        <div class="container mx-auto flex flex-col gap-3 justify-center items-center">
            &copy; 2003-2024, Waka Daiko. All rights reserved.
            <span class="flex gap-5 ms-1">
                <partial name="~/views/shared/htmllink.cshtml"
                    model='new HtmlLinkVM { Type="footer", URL="/home/privacy", Body="Privacy" }' />
                <partial name="~/views/shared/htmllink.cshtml"
                    model='new HtmlLinkVM { Type="footer", URL="/home/sitemap", Body="Sitemap" }' />
            </span>
        </div>
    </footer>
    @* Section - Scroll To Top *@
    <button id="buttonScrollToTop"
        class="z-10 duration-200 ease-in-out scale-0 fixed bottom-[16px] right-[16px] bg-red-600 hover:bg-red-500 text-white shadow-lg p-3"
        onclick="scrollToTop();">
        <svg stroke="currentColor" fill="currentColor" stroke-width="2" viewBox="0 0 16 16" height="16px" width="16px"
            xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd"
                d="M7.646 4.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1-.708.708L8 5.707l-5.646 5.647a.5.5 0 0 1-.708-.708l6-6z">
            </path>
        </svg>
    </button>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
