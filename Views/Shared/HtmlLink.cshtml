@{
    string c = "";
    const string colorDefault1 = "underline decoration-blue-500 hover:decoration-blue-400 text-blue-500 hover:text-blue-400";
    const string colorDefault2 = "text-blue-500 hover:text-blue-400";
    const string class1 = $"flex justify-center items-center {colorDefault1} p-3";
    const string class2 = $"flex justify-center items-center {colorDefault2} p-3";
    const string buttonSolid = "flex justify-center items-center whitespace-nowrap font-bold bg-red-600 hover:bg-red-500 text-white p-4";

    switch (Model.Type)
    {
        case "nav-brand":
            c = $"h-full flex justify-center  items-center gap-2 font-black text-2xl text-black hover:bg-[rgb(90%,90%,90%)] px-4";
            break;
        case "navlink":
            c = "flex items-center font-medium text-[rgb(37.5%,37.5%,37.5%)] hover:text-black p-4";
            break;
        case "nav-workshops":
            c = $"gap-3 {buttonSolid} m-5 my-3 lg:m-0";
            break;
        case "dropdown":
            c = "flex items-center font-medium text-black hover:bg-[rgb(90%,90%,90%)] lg:border-[1px] lg:border-[rgb(75%,75%,75%)] lg:hover:border-[rgb(50%,50%,50%)] p-4";
            break;
        case "dialog":
            c = $"flex justify-center items-center {colorDefault1} p-4 -m-3";
            break;
        case "btn-solid":
            c = buttonSolid;
            break;
        case "btn-outline":
            c = "flex justify-center items-center font-bold border-2 border-[rgb(75%,75%,75%)] hover:border-white text-white p-4";
            break;
        case "fancy-link":
            c = $"group flex items-center text-xs lg:text-base text-blue-500 hover:text-blue-400 p-4 -m-3";
            break;
        @* case "account-1":
            c = $"w-max flex items-center {colorDefault1} -ms-3 p-3";
            break;
        case "account-2":
            c = $"{class1}";
            break;
        case "user":
            c = $"w-max flex items-center {colorDefault1} -ms-3 p-3";
            break; *@
        case "footer":
            c = $"flex items-center {colorDefault1} -m-3 p-3";
            break;
        default:
            c = $"{colorDefault1} p-3";
            break;
    }
}

