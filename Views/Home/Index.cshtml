    class="z-40 duration-200 ease-in-out fixed bottom-0 lg:bottom-4 left-0 lg:left-4 scale-1 w-full lg:w-max flex flex-col justify-center gap-2 rounded-md bg-white text-xs text-black border-[1px] border-[rgb(50,50,50)] p-4">
    <div class="flex justify-center">
        <div class="my-auto">
            This site uses analytics. Click
        </div>
        <partial name="~/views/shared/htmllink.cshtml"
            model='new HtmlLinkVM { Type="link-dialog", URL="/home/privacy", Body="here" }' />
        <div class="my-auto">
            to learn more.
        </div>
    </div>
    <partial name="~/views/shared/htmllink.cshtml"
        model='new HtmlLinkVM { Type="btn-dialog", URL="/home/privacy", Body="DISMISS" }' />
