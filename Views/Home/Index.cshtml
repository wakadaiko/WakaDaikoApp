@* Homepage *@
<div class="z-0 relative flex grow justify-center items-center overflow-hidden text-white">
    <div
        class='relative z-20 size-full min-h-[calc(100vh-@(ViewBag.BannerTitle != null && ViewBag.BannerDate != null ? "96" : "64")px)] lg:min-h-[calc(87.5vh-@(ViewBag.BannerTitle != null && ViewBag.BannerDate != null ? "96" : "64")px)] flex flex-col bg-gradient-to-t from-[rgb(30,30,30)] from-0% via-transparent via-50% to-[rgb(30,30,30)] to-100%'>
        <div class="z-10 absolute top-0 left-0 size-full bg-[linear-gradient(to_right,rgba(0,0,0,0.5),transparent)]">
        </div>
        <div
            class='z-20 size-full min-h-[calc(100vh-@(ViewBag.BannerTitle != null && ViewBag.BannerDate != null ? "96" : "64")px)] lg:min-h-[calc(87.5vh-@(ViewBag.BannerTitle != null && ViewBag.BannerDate != null ? "96" : "64")px)] flex flex-col bg-[linear-gradient(rgba(5%,5%,15%,0.25),rgba(5%,5%,15%,0.25))]'>
            <div
                class="w-min flex flex-col gap-2 items-center lg:items-start rounded-[128px] text-center lg:text-start m-auto lg:ms-[12.5vw] p-10">
                @* Inline style for TailwindCSS *@
                <h1 class="w-max bg-clip-text bg-gradient-to-r from-rose-400 to-amber-300 font-['Bebas_Neue']
                font-black tracking-wider text-nowrap text-7xl lg:text-9xl lg:text-transparent"
                    style="line-height: 0.8;">
                    Waka Daiko
                </h1>
                @* <h1 class="w-max font-['Bebas_Neue'] font-black tracking-wider text-nowrap text-7xl lg:text-9xl"
                style="line-height: 0.8;">
                Waka Daiko
                </h1> *@
                @* <hr class="w-2/3 border-4 border-white mb-4" /> *@
                <h3 class="font-['Bebas_Neue'] lg:font-black tracking-wider text-wrap text-xl lg:text-4xl"
                    style="line-height: 0.8;">
                    Events, Teamwork, Community, Culture
                </h3>
                <p class="font-medium text-xs lg:text-xl mb-2">
                    Youth taiko drumming group based in Eugene, Oregon. All youth ages 8-22 are welcome.
                </p>
                <div class='w-max flex flex-col lg:flex-row gap-2 mx-auto lg:mx-0'>
                    <partial name="~/views/shared/htmllink.cshtml"
                        model='new HtmlLinkVM { Type="btn-primary", URL="/events?search=&status=eStatusPast", Body="PAST EVENTS" }' />
                    <partial name="~/views/shared/htmllink.cshtml"
                        model='new HtmlLinkVM { Type="btn-secondary", URL="/workshops", Body="WORKSHOPS" }' />
                </div>
            </div>
        </div>
    </div>
    <img class="absolute z-10 size-full object-cover saturate-[67.5%] brightness-[137.5%] contrast-[87.5%]"
        src="~/images/homepage.jpg" alt="Homepage screenshot" />
</div>
