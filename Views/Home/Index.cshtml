@{
    ViewBag.Title = "Home / Homepage";
}

<div id="disclaimer"
    class="z-40 duration-200 ease-in-out fixed bottom-0 lg:bottom-[20px] right-0 lg:right-100 left-0 lg:left-[20px] scale-1 lg:w-max flex flex-col justify-center gap-3 rounded-lg bg-white text-xs text-black border-[1px] border-[rgb(50,50,50)] p-3">
    <div class="flex justify-center">
        <div class="my-auto">
            This site uses analytics. Click
        </div>
        <partial name="~/views/shared/htmllink.cshtml"
            model='new HtmlLinkVM { Type="dialog", URL="/home/privacy", Body="here" }' />
        <div class="my-auto">
            to learn more.
        </div>
    </div>
    <button
        class="rounded-lg bg-transparent hover:bg-black font-black tracking-wider text-black hover:text-white border-[1px] border-black hover:border-transparent p-3"
        onclick="removeDisclaimer();">DISMISS</button>
</div>
@*bg-[radial-gradient(transparent,rgba(255,0,0,1))]">*@
